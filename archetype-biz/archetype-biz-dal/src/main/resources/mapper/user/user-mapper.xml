<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangbin.archetype.biz.dal.user.UserMapper">


    <resultMap id="user_result" type="UserDO" extends="common.base.mapper.base_result">
        <result property="userName" column="user_name"/>
        <result property="userPwd" column="user_pwd"/>
        <result property="userSex" column="user_sex"/>
    </resultMap>

    <sql id="query_all_column">
        id,
        user_name,
        user_pwd,
        user_sex,
        is_deleted,
        gmt_created,
        gmt_modified
    </sql>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user (
          user_name,
          user_pwd,
          user_sex,
          gmt_created,
          gmt_modified
        ) VALUES (
          #{userName},
          #{userPwd},
          #{userSex},
          now(),
          now()
        )
    </insert>

    <update id="logicDelete">
        UPDATE t_user SET gmt_modified = now() AND is_deleted = 1
        WHERE id = #{id}
    </update>

    <select id="queryById" resultMap="user_result">
        SELECT
        <include refid="query_all_column"/>
        FROM t_user WHERE id = #{id}
    </select>

    <select id="query" resultMap="user_result">
        SELECT
        <include refid="query_all_column"/>
        FROM t_user
        <include refid="query_condition"/>
    </select>

    <sql id="query_condition">
        <where>
            is_deleted = 0
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="userName != null and userName !=''">
                AND user_name LIKE concat('%',#{userName},'%')
            </if>
        </where>
    </sql>


</mapper>